<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/dp_40"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp5"
        android:scaleType="center"
        android:src="@mipmap/iconc_noselect" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="100dp"
        android:text="测试店"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="配送费:" />

        <EditText
            android:id="@+id/edit_peisongfei"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:inputType="numberDecimal"
            android:padding="@dimen/dp5"
            android:textSize="@dimen/sp15"
            android:background="@drawable/shape_search_fang_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp30"
            android:text="起送价:"
            />
        <EditText
            android:id="@+id/edit_qisongfei"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:inputType="numberDecimal"
            android:padding="@dimen/dp5"
            android:textSize="@dimen/sp15"
            android:background="@drawable/shape_search_fang_bg" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_sure"
        android:background="@drawable/bt_click"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_width="80dp"
        android:layout_marginTop="@dimen/dp15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="center_vertical"
        android:text="确认修改"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp13"
        />
    <View
        style="@style/common_line_horizontal_80"
        android:layout_alignParentBottom="true" />
</RelativeLayout>