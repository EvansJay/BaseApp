<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <!--<include android:id="@+id/title" layout="@layout/layout_title"/>-->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f9f9f9"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="基本信息"
                    android:textColor="@color/txt_color2"
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/write"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="商品图片"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <ImageView
                        android:id="@+id/iv_pic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp30"
                        android:scaleType="center"
                        android:src="@mipmap/icon_add_pic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="商品名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:background="@null"
                        android:hint="请输入商品名称（必填）"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="商品描述"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_goods_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:background="@null"
                        android:hint="请输入商品描述"
                        android:maxLines="3"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="店内分类"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_goods_clazz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:drawableRight="@mipmap/icon_right"
                        android:gravity="center_vertical"
                        android:hint="请选择分类（必填）"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="商品规格"
                    android:textColor="@color/txt_color2"
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="价格"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入商品价格（必填）"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="餐盒费"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/et_box_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入餐盒费用"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="当前库存"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入库存（必填）"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="9999"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_num_clean"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:text="沽清"
                        android:textColor="@color/txt_color5"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_num_max"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:text="置满"
                        android:textColor="@color/txt_color5"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/write"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="最大库存"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_num_max"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:enabled="false"
                        android:inputType="number"
                        android:text="10000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:text="商品规格"
                    android:textColor="@color/txt_color2"
                    android:textSize="@dimen/sp12" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    />

                <TextView
                    android:id="@+id/tv_most_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_item"
                    android:drawableLeft="@mipmap/icon_goods_add"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/dp15"
                    android:text="添加多规格"
                    android:textColor="@color/txt_color5"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:text="商品属性（微辣、去冰、大份）"
                    android:textColor="@color/txt_color2"
                    android:textSize="@dimen/sp12" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_most_attr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_item"
                    android:drawableLeft="@mipmap/icon_goods_add"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/dp15"
                    android:text="添加属性"
                    android:textColor="@color/txt_color5" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:text="活动管理"
                    android:textColor="@color/txt_color2"
                    android:textSize="@dimen/sp12" />
                <RelativeLayout
                    android:background="@color/write"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="开启折扣"
                        android:layout_marginLeft="@dimen/dp15"
                        android:textSize="@dimen/sp15"
                        android:textColor="@color/color_333333"
                        />
                    <Switch
                        android:id="@+id/switch_tab_zhekou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="折扣"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_zhekou"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请填写"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="折"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="折后价格"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_zhekou_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请填写"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="平台补贴"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_zhekou_price_allowed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请填写"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/write"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="单次限购"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_single_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请填写"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="件"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="40dp"
                    android:background="@color/write"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="是否与满减同享"
                        android:layout_marginLeft="@dimen/dp15"
                        android:textSize="@dimen/sp15"
                        android:textColor="@color/color_333333"
                        />
                    <Switch
                        android:id="@+id/switch_tab_manjian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp15" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp07"
                    android:background="@color/color_dddddd" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_item"
                    android:drawablePadding="@dimen/dp10"
                    android:gravity="center"
                    android:padding="@dimen/dp15"
                    android:text="删除商品"
                    android:textColor="@color/txt_color_red" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
