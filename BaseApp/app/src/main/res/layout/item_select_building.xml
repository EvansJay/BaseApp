<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50">
    <TextView
        android:id="@+id/tv_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼栋一"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp15"
        />
    <RelativeLayout
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        >
    <widget.LongClickButton
        android:id="@+id/img_jia"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_centerVertical="true"
        android:background="@mipmap/iocn_jia"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#545455"
        android:textSize="@dimen/sp14"
        />
    <widget.LongClickButton
        android:id="@+id/img_jian"
        android:layout_width="25dp"
        android:layout_height="@dimen/dp25"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_jian"
        />
    </RelativeLayout>
    <View style="@style/common_line_horizontal_80"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>