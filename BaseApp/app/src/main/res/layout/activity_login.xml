<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="page"
                type="ui.activity.login.LoginActivity"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/write">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/write"
                android:textSize="@dimen/sp18"
                android:padding="@dimen/dp15"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="同学快跑后台"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/write"
                android:paddingBottom="@dimen/dp40"
                android:paddingLeft="@dimen/dp20"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <widget.ClearEditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginRight="@dimen/dp20"
                        android:layout_height="48dp"
                        android:layout_marginTop="35dp"
                        android:drawableLeft="@mipmap/zhanghao"
                        android:drawablePadding="@dimen/dp15"
                        android:background="@drawable/layout_borde"
                        android:gravity="center_vertical"
                        android:hint="请输入您的手机号"
                        android:maxLength="30"
                        android:paddingRight="10dp"
                        android:paddingLeft="@dimen/dp20"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_d8d8d8"
                        android:textSize="14sp"/>
                <!--<Button android:id="@+id/bt_code"-->
                        <!--android:layout_weight="2"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="32dp"-->
                        <!--android:text="获取验证码"-->
                        <!--android:layout_marginRight="15dp"-->
                        <!--android:textSize="14sp"-->
                        <!--android:background="@drawable/bt_click"-->
                <!--/>-->
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="@dimen/dp20"
                    android:orientation="horizontal">

                <widget.ClearEditText
                        android:id="@+id/et_pwd"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:drawableLeft="@mipmap/mima"
                        android:drawablePadding="@dimen/dp15"
                        android:background="@drawable/layout_borde"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:paddingRight="12dp"
                        android:paddingLeft="@dimen/dp20"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textColorHint="@color/color_d8d8d8"
                        android:textSize="14sp"/>
                <!--<ImageView-->
                        <!--android:id="@+id/iv_show_pwd"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:scaleType="center"-->
                        <!--android:visibility="gone"-->
                        <!--android:src="@mipmap/icon_biyan"/>-->
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/color_999999"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="如果您是第一次绑定手机号，我们将为您创建账户"
            />
            <Button
                    android:id="@+id/btn_login"
                    style="@style/buttonStyle"
                    android:background="@drawable/bt_shape_click"
                    android:enabled="true"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_marginTop="39dp"
                    android:textColor="@color/write"
                    android:textSize="@dimen/sp17"
                    android:text="登录"/>

        </LinearLayout>
    </LinearLayout>
</layout>