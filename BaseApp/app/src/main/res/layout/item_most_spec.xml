<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f9f9f9"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="end|middle"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/write"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="规格名"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_spec_name"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp14"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp30"
            android:hint="请输入商品名称"
            android:singleLine="true"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/write"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="价格"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:layout_marginLeft="@dimen/dp30"
            android:hint="请输入商品价格"
            android:textSize="@dimen/sp14"
            android:singleLine="true"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="元"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/write"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="餐盒费"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_box_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:layout_marginLeft="@dimen/dp30"
            android:hint="请输入餐盒费用"
            android:textSize="@dimen/sp14"
            android:singleLine="true"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="元"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/write"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="当前库存"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp30"
            android:hint="请输入当前库存"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/sp14"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_num_clean"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textSize="@dimen/sp15"
            android:text="沽清"
            android:textColor="@color/txt_color5"/>

        <TextView
            android:id="@+id/tv_num_max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="center"
            android:textSize="@dimen/sp15"
            android:text="置满"
            android:textColor="@color/txt_color5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:padding="@dimen/dp15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="最大库存"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/et_num_max"
            android:layout_width="0dp"
            android:textSize="@dimen/sp14"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="number"
            android:enabled="false"
            android:textColor="@color/black"
            android:text="10000"
            android:layout_marginLeft="@dimen/dp30"
            android:background="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:padding="@dimen/dp15"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp15"
            android:text="库存次日置满"
            android:textColor="@color/black"/>
        <Switch
            android:id="@+id/switch_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/selector_bg_item"
        android:textColor="@color/txt_color_red"
        android:padding="@dimen/dp15"
        android:drawablePadding="@dimen/dp10"
        android:text="删除该规格" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>

</LinearLayout>
