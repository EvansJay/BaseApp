<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:orientation="horizontal"
    android:background="@drawable/select_white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/sp15"
        android:padding="@dimen/dp15"
        android:textColor="@color/txt_color4"
        android:layout_height="wrap_content"
        android:text="沙拉"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_go_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:padding="@dimen/dp15"
            android:textColor="@color/txt_color5"
            android:layout_alignParentRight="true"
            android:text="置顶"/>
        <ImageView
            android:id="@+id/iv_paixu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15"
            android:src="@mipmap/icon_paixu2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_edit"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp15"
        android:padding="@dimen/dp15"
        android:textColor="@color/txt_color5"
        android:layout_alignParentRight="true"
        android:text="编辑"/>

</LinearLayout>
    <View style="@style/common_line_horizontal_80"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>